/* components/headerToast/headerToast.wxss */
.header-toast {
    position: fixed;
    top: 0;        
    width: 100%;
    height: 60rpx;
    text-align: center;
    white-space: nowrap;
    z-index: 9999;
}

.header-content {
    display: inline-block;
    color: #fff;
    padding: 0 48rpx;
    line-height: 60rpx;
    background:rgba(1,1,1,0.8);
    border-radius:30rpx;
    font-size:26rpx;
    font-weight:500;
}

.toast-visible {
    visibility: visible;
    opacity: 1;
    transform: translateY(23rpx);
    -webkit-transform: translateY(23rpx);    
    /* 进入 */
    transition: opacity 200ms ease, transform 200ms ease, -webkit-transform 200ms ease;
}

.toast-hidden {
    visibility: hidden;
    opacity: 0;
    transform: translateY(0rpx); 
    -webkit-transform: translateY(0rpx);           
    /* 退出 */
    transition: visibility 0ms ease 200ms, opacity 200ms ease, transform 200ms ease, -webkit-transform 200ms ease;
}